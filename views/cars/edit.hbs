<section class="h-100 edit-car">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card my-4">
          <div class="row g-0">
            <div class="col-xl-12 bg-white bg-gradient border border-info">
              <div class="card-body p-md-5 text-black">

                <h3 class="text-uppercase">Edit this car</h3>

                <form action="/cars/{{car._id}}/edit" method="POST" enctype="multipart/form-data">

                  <label for="make">Make:</label>
                  <input type="text" class="form-control" name="make" id="make" placeholder="e.g. Volkswagen" value="{{car.make}}">

                  <label for="model">Model:</label>
                  <input type="text" class="form-control" name="model" id="model" placeholder="e.g. Sirocco" value="{{car.model}}">

                  <label for="yearOfProd">Year of production:</label>
                  <input type="number" class="form-control" name="yearOfProd" id="yearOfProd" placeholder="e.g. 2008" value="{{car.yearOfProd}}">

                  <label for="engine">Engine:</label>
                  <input type="text" class="form-control" name="engine" id="engine" placeholder="e.g. 1600 ccm3" value="{{car.engine}}">

                  <label for="transmission">Transmission:</label>
                  <input type="text" class="form-control" name="transmission" id="transmission" placeholder="e.g. Manual" value="{{car.transmission}}">

                  <label for="fuel">Fuel:</label>
                  <input type="text" class="form-control" name="fuel" id="fuel" placeholder="e.g. Diesel" value="{{car.fuel}}">

                  <label for="extras">Extras:</label>
                  <input type="text" class="form-control" name="extras" id="extras" placeholder="e.g. Navigation" value="{{car.extras}}">

                  <label for="rentalCost">Rental Cost:</label>
                  <input type="number" class="form-control" name="rentalCost" id="rentalCost" placeholder="e.g. 250$" value="{{car.rentalCost}}">

                  <label for="status">Car Status:</label>
                  <input type="text" class="form-control" name="status" id="status" placeholder="e.g. Free" value="{{car.status}}">

                  <label for="description">Description:</label>
                  <input type="text" class="form-control" name="description" id="description" placeholder="e.g. Something about the car" value="{{car.description}}">

                  <label for="car-cover-image">Image:</label>
                  <input type="file" name="car-cover-image" class="form-control" />
                  <input type="text" name="existingImage" hidden value="{{car.imageUrl}}">

                  <button class="btn btn-lg btn-success my-4" type="submit">Update this car</button>

                  <a class="btn btn-lg btn-warning my-4" href="/cars">Cancel</a>

              </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>