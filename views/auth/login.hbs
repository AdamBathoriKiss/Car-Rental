<section class="h-100 login">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card my-4">
          <div class="row g-0">
            <div class="col-xl-12 bg-white bg-gradient border border-info">
              <div class="card-body p-md-5 text-black">

                <form action="/login" method="POST">

                  <h1 class="mb-5 text-center">A&L Car Rental System</h1>
              
                  <h3 class="mb-5 text-uppercase text-center">Log in</h3>

                  <div class="col-md-12 mb-4">
                   <div class="form-outline">
                      <label class="form-label text-uppercase" for="username">Username</label>
                      <input type="text" name="username" id="username" class="form-control form-control-lg border border-info" placeholder="Enter your username">
                    </div>
                  </div>

                  <div class="col-md-12 mb-4">
                    <div class="form-outline">
                      <label class="form-label text-uppercase" for="password">Password</label>
                      <input type="password" name="password" id="password" class="form-control form-control-lg border border-info" placeholder="Enter your password">
                    </div>
                  </div>

                  <div class="col-md-12 mb-4">
                    <div class="form-outline">
                      <button class="w-100 btn btn-lg btn-info" type="submit">Log in</button>
                    </div>
                  </div>

                </form>

              </div>

              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase text-center">Need an account? Sign up here!</h3>

                <div class="col-md-12 mb-4">
                  <div class="form-outline">
                    <a class="w-100 btn btn-lg btn-warning" href="/signup">Sign up</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>