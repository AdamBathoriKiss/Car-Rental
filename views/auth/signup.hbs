<section class="h-100">
  <div class="container py-5 h-100">

    <form action="/signup" method="POST">

    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            
            <div class="col-xl-6 bg-info bg-gradient border border-info">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase text-white">Contact Details</h3>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label text-white text-uppercase" for="firstName">First name</label>
                      <input type="text" name="firstName" id="firstName" class="form-control form-control-lg border border-white" required />
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label text-white text-uppercase" for="lastName">Last name</label>
                      <input type="text" name="lastName" id="lastName" class="form-control form-control-lg border border-white" required />
                    </div>
                  </div>
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label text-white text-uppercase" for="dateOfBirth">Date of Birth</label>
                  <input type="date" name="dateOfBirth" id="dateOfBirth" class="form-control form-control-lg border border-white" required />
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label text-white text-uppercase" for="idCardNumber">ID Card Number</label>
                  <input type="text" name="idCardNumber" id="idCardNumber" class="form-control form-control-lg border border-white" required />
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label text-white text-uppercase" for="idDriverLicense">Driver License ID</label>
                  <input type="text" name="idDriverLicense" id="idDriverLicense" class="form-control form-control-lg border border-white" required />
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label text-white text-uppercase" for="address">Address</label>
                  <input type="text" name="address" id="address" class="form-control form-control-lg border border-white" required />
                </div>

              </div>
            </div>
            <div class="col-xl-6 border border-info">
              <div class="card-body p-md-5 text-black">
              <h3 class="mb-5 text-uppercase text-info">Account Details</h3>
              <div class="form-outline mb-4">
                    <div class="form-outline">
                      <label class="form-label text-uppercase" for="username">Username</label>
                      <input type="text" name="username" id="username" class="form-control form-control-lg border border-info" required />
                    </div>
                  </div>

                  <div class="form-outline mb-4">
                    <div class="form-outline">
                      <label class="form-label text-uppercase" for="email">Email address</label>
                      <input type="text" name="email" id="email" class="form-control form-control-lg border border-info" required />
                    </div>
                  </div>

                  <div class="form-outline mb-4">
                    <div class="form-outline">
                      <label class="form-label text-uppercase" for="password">Password</label>
                      <input type="password" name="password" id="password" class="form-control form-control-lg border border-info" required />
                    </div>
                  </div>

                  <div class="d-flex justify-content-end pt-3">
                  <button type="button" class="btn btn-danger btn-lg">Reset Form Settings</button>
                  <button type="submit" class="btn btn-warning btn-lg ms-2">Submit Form</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    </form>

  </div>
</section>